.container
  .section-title.text-center
    %h2 サ飯詳細
    %br
    .food-detail.center-block
      .food-detail__user-info.text-left
        = image_tag @food.user.avatar.url, size: "30x30", class: "img-circle"
        = @food.user.name
        = @food.created_at.strftime("%Y/%m/%d %H:%M")
      .food-detail__food-img
        = image_tag @food.image.url, size: "400x400", class: "img-rounded food-img"
      %ul.food-detail__lists.text-left
        %li.food-detail__lists__list
          %span.food-detail__lists__list__key
            品名:
          %span.food-detail__lists__list__value
            = @food.name
        %li.food-detail__lists__list
          %span.food-detail__lists__list__key
            サウナ:
          %span.food-detail__lists__list__value
            = @food.visited_sauna
        %li.food-detail__lists__list
          %span.food-detail__lists__list__key
            エリア:
          %span.food-detail__lists__list__value
            = @food.prefecture.name
        %li.food-detail__lists__list
          %span.food-detail__lists__list__key
            ひと言:
          %span.food-detail__lists__list__value
            = @food.description
      - if user_signed_in? && current_user.id == @food.user_id || current_user.admin?
        = link_to '編集する', edit_food_path(@food), class: 'btn btn-primary btn-lg edit-btn mb-10' 
        = link_to '削除する', food_path(@food),method: :delete, data: { confirm: '削除しますか？' },class: 'btn btn-danger btn-lg edit-btn mb-10'
      
        = form_with(model:[@food, @comment], method: :post) do |f|

          = f.text_area :content, rows: 3,placeholder: "コメント欄",class:".comment-form base-textarea"
          = f.hidden_field :food_id, value: @food.id
          = f.submit 'コメントする',class:"btn btn-success"

    - if @food.comments.present?
      %h2 コメント一覧
      .row
        .comments.center-block
          - @comments.each do |comment|
            %ul.comments__lists.text-left
              %li.comments__lists__content.mb-10
                = comment.content
              %li.comments__lists__info
                %span
                  = image_tag comment.user.avatar.url, size: "25x25", class: "img-circle"
                %span.ml-10
                  = comment.user.name
                %span.ml-10
                  #{time_ago_in_words(comment.created_at)}前